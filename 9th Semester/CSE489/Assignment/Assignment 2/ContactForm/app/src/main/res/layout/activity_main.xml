<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

<!--    Navbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.6">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Contact Form"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            />
    </LinearLayout>


<!--    Main Center-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:padding="15dp"
        android:background="#D9C7C7">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:paddingVertical="5dp"/>
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tvName"
                android:layout_marginRight="130dp"
                android:background="#FFFFFF"/>
            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_alignParentRight="true"
                android:background="#FFFFFF"
                android:src="@android:drawable/ic_menu_camera"
                />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/etName"
                android:paddingVertical="5dp"/>
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tvEmail"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/tvPhoneHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone (Home)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/etEmail"
                android:paddingVertical="5dp"/>
            <EditText
                android:id="@+id/etPhoneHome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tvPhoneHome"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/tvPhoneOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone (Office)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/etPhoneHome"
                android:paddingVertical="5dp"/>
            <EditText
                android:id="@+id/etPhoneOffice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tvPhoneOffice"
                android:background="#FFFFFF"/>

        </RelativeLayout>
    </LinearLayout>

<!--    End Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.6">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:text="Cancel"/>
            <Button
                android:id="@+id/btnSave"
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="Save"/>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>