<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#363B7080"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvContactForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Form"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_weight="8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="20dp"/>


            <EditText
                android:id="@+id/etName"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:hint="  Enter Full name " />

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:background="@color/white"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Image"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/userImage"
                android:layout_marginLeft="10dp"
                android:textColor="#6A000000" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etname"
            android:textSize="20dp"
            android:text="Email"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="  abc123@gmail.com"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tvPhoneHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone (Home)"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/etPhoneHome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:hint="  e.g. +880 0123456789 "/>

        <TextView
            android:id="@+id/PhoneOffice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Phone (Office)"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/etPhoneOffice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:hint="  e.g. +880 0123456789 "/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btCancel"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Cancel"
            android:layout_weight="1"
            android:backgroundTint="#3D438A"/>

        <Button
            android:id="@+id/btSave"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Save"
            android:backgroundTint="#3D438A"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>



</LinearLayout>